# Exit codes:
#   0: normal exit
#   1: configuration file is missing

#CFGFILE="/etc/mm5d/mm5d.ini"
CFGFILE="/usr/local/etc/mm5d/mm5d.ini"
if [ ! -f $CFGFILE ]
then
  echo "ERROR: Cannot open configuration file!"
exit 1
fi

sudo mm5d-editmainconf.bin $CFGFILE
if [ $? -eq 0 ]
then
  mm5d-stopdaemon
  mm5d-updatestartpage
  mm5d-startdaemon
fi
exit 0
