name		= mm5d
version		= @version@
architecture	= @architecture@
os              = @os@

binmode		= 0755
txtmode		= 0644

install		= @install@
make		= @make@
rm		= @rm@ -f

fpflag		= -T@os@ \
                  -MObjFPC \
                  -Scgi \
                  -O1 \
                  -v0 \
                  -ve \
                  -FE./lib/@architecture@-@os@/ \
                  -Fu. \
                  -Fu./lib/@architecture@-@os@/

