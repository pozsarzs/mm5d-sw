CFGFILE="/usr/local/etc/mm3d/mm3d.ini"
if [ ! -f $CFGFILE ]
then
  echo "ERROR: Cannot open configuration file!"
exit 1
fi

mm3d-stopdaemon
sudo editor $CFGFILE
mm3d-updatestartpage
mm3d-startdaemon
exit 0
