# Exit codes:
#   0: normal exit
#   1: configuration file is missing

#CFGFILE="/etc/mm5d/envir.ini"
CFGFILE="/usr/local/etc/mm5d/envir.ini"
if [ ! -f $CFGFILE ]
then
  echo "ERROR: Cannot open configuration file!"
exit 1
fi

sudo mm5d-editenvirconf.bin $CFGFILE
if [ $? -eq 0 ]
then
  mm3d-stopdaemon
  mm3d-startdaemon
fi
